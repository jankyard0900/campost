<div class="container px-5 my-5 px-sm-0 my-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h4 class="mt-5 text-center", style="background-color: #eee; width:200px; padding-left: 12px; margin-bottom: 40px;"><b>管理者ログイン</b></h4>
      <div class="d-flex align-items-center justify-content-center">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %></br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-3 pt-0" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %></br>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
          </div>
        <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>