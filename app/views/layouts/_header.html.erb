<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <!--管理者がログインしているとき-->
      <% if admin_signed_in? %>
        <h2>Camposts</h2>
      <% else %>
        <%= link_to root_path, class: "nav-brand text-dark" do %>
          <font size="6">Camposts</font>
        <% end %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <!--管理者がログインしているとき-->
          <% if admin_signed_in? %>
           <li><%= link_to "キャンプギア一覽", gears_path, class: "nav-link btn btn-outline-dark" %></li>
           <li><%= link_to "キャンプ場一覽", camps_path, class: "nav-link btn btn-outline-dark" %></li>
           <li><%= link_to "会員一覽", admin_customers_path, class: "nav-link btn btn-outline-dark" %></li>
