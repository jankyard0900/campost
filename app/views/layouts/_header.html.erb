          <!--<#% elseif guest_customer_signed_in? %>
            <li><#%= link_to "キャンプギア一覽", gears_path, class: "btn btn-outline-dark" %></li>
            <li><#%= link_to "キャンプ場一覽", camps_path, class: "btn btn-outline-dark" %></li>
            <li><#%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark" %></li>-->
          <!--ログインしてないとき-->
          <% else %>
            <li><%= link_to "新規会員登録", new_customer_registration_path, class: "nav-link btn btn-outline-dark" %></li>
            <li><%= link_to "ゲストログイン"%></li>
            <li><%= link_to "ログイン", new_customer_session_path, class: "nav-link btn btn-outline-dark" %></li>
          <% end %>
        </ul>
        <!--検索窓-->
        <ul class="navbar-nav">
          <li class="nav-item ml-auto pr-3">
            <%= render 'public/searches/search' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>