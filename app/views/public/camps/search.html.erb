<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-2 col-12 mb-3'>
      <%= render 'area_search', areas: @areas %>
    </div>

    <div class='col-md-10 col-12'>

      <div class="row pl-3">
        <h3><b><%= @area.name %>のキャンプ場一覧</b></h3>
        <b>（全<%= @camps_count %>件）</b>
      </div>

      <div class="row pl-3">
        <p>
          <%= link_to '新しい順', camp_search_path(area_id: @area.id, latest: "新着順") %>
          | <%= link_to '評価の高い順', camp_search_path(area_id: @area.id, star_count: "評価の高い順") %>
        </p>
      </div>



      <div class = "row">
        <%= render "index", camps: @area_camps %>
      </div>

      <div class="d-flex justify-content-center">
        <%= paginate @area_camps %>
      </div>
    </div>
  </div>
</div>