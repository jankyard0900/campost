<div class="col-md-4">
  <div class="row d-flex justify-content-center">
    <h6 class="text-center", style="background-color: #eee; width:190px; margin-bottom: 40px;"><b>プロフィール</b></h6>
  </div>
  <div class="row d-flex justify-content-center">
    <%= image_tag customer.get_profile_image(100, 100) %>
  </div>
  <div class="row d-flex justify-content-center">
    <p><b>ニックネーム</b></p>
    <p><%= customer.name %></p>
  </div>
  <div class="row d-flex justify-content-center">
    <%= link_to "プロフィール編集", edit_customer_path(customer.id), class: 'btn btn-success' %>
  </div>
  <div class="row mt-3 d-flex justify-content-center">
    <%= link_to link, url, class: "btn btn-primary" %>
  </div>
</div>