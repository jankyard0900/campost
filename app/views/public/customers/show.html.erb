          starOn    : '<%= asset_path('star-on.png') %>',
          starHalf  : '<%= asset_path('star-half.png') %>',
          half      : true,
          readOnly  : true,
          score: '<%= review.rate %>',
        });
      });
      </script>
    </tr>
    <tr>
      <td><b><%= review.title %></b></td>
    </tr>
    <tr>
      <td><%= review.review %></td>
    </tr>
  <% end %>
  </table>
</div>


  </div>
</div>