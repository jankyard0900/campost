<div class='container mt-5 h-75'>
  <div class='row h-100'>
    <div class='col-md-2'>
      カテゴリ検索機能
    </div>

    <div class='col-md-10'>
      <div class = "new-arrival">
        <div style="display:flex; flex-wrap:wrap;">
          <h3><strong>キャンプギア一覧</strong></h3>
          <div class="mt-2"><strong>（全<%= @gears.count%>件）</strong></div>
        </div>
        <div class = "new-arrival-contents" style="display:flex; flex-wrap:wrap;">
          <% @gears.each do |gear| %>
          <div class="col-lg-4">
            <div class="d-flex flex-column">
              <!--画像の一枚目投稿予定-->
              <h5 style="margin-bottom: 20px; margin-top: 20px;"><%= gear.name %></h5>
              <!--レビューの平均☆表示予定-->
            </div>
          </div>
          <% end %>
        </div>

        <div class="d-flex justify-content-center">
          <%= paginate @gears %>
        </div>
      </div>
    </div>
  </div>
</div>