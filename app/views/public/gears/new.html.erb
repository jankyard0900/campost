<div class="container px-5 my-5 px-sm-0 my-sm-0">
  <div class="row">
    <h5 class="mt-5 text-center", style="background-color: #eee; width:240px; padding-left: 8px; margin-bottom: 40px;"><b>キャンプギア情報投稿</b></h5>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-7 co-12">

      <%= form_with model: @gear, url: gears_path, method: :post do |f| %>

        <% if @gear.errors.any? %>
          <%= @gear.errors.count %>件のエラーが発生しました。
          <ul>
            <% @gear.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <div class="form-group">
          <b><%= f.label :gear_images, "キャンプギアの画像" %></b>
          <b><p>(５枚まで選択できます)</p></b>
          <%= f.file_field :gear_images, multiple: true, accept: "image/*", class: "form-control-file" %>
        </div>

        <div>
          <img id="preview_0" style="width:15%;">
          <img id="preview_1" style="width:15%;">
          <img id="preview_2" style="width:15%;">
          <img id="preview_3" style="width:15%;">
          <img id="preview_4" style="width:15%;">
        </div>

        <div class="form-group mt-2">
          <b><%= f.label :name, "キャンプギア名" %></b>
          <%= f.text_field :name, class: "form-control", placeholder: "キャンプギア名" %>
        </div>

        <div class="form-group">
          <b><%= f.label :price, "値段" %></b>
          <%= f.text_field :price, class: "form-control", placeholder: "15000" %>　円
        </div>

        <div class="form-group">
          <b><%= f.label :brand_name, "ブランド名" %></b>
          <%= f.text_field :brand_name, class: "form-control", placeholder: "snowpeak", style:"margin-bottom: 40px;" %>
        </div>

        <div class="form-group">
          <b><%= f.label :category_id, "カテゴリ名" %></b>
          <%= f.collection_select :category_id, @categories, :id, :name, include_blank: '選択してください', required: true %>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit "キャンプギア投稿", class: 'btn btn-success mt-4' %>
        </div>

      <% end %>

    </div>
  </div>
</div>


<script>
$('#gear_gear_images').on('change', function (e) {

    if(e.target.files.length > 5){

      alert('一度に投稿できるのは五枚までです。');
      // 五枚以上の画像を選択していた場合、選択したファイルをリセット。
      $('#gear_gear_images').val("");

      // 以前の画像のプレビューが残っていた場合は、
      // まだ画像選択できていると勘違いを誘発するため初期化。
      for( let i = 0; i < 5; i++) {
        $(`#preview_${i}`).attr('src', "");
      }

    }else{
      let reader = new Array(5);

      // 画像選択を二回した時、一回目より数が少なかったりすると画面上に残るので初期化
      for( let i = 0; i < 5; i++) {
        $(`#preview_${i}`).attr('src', "");
      }

      for(let i = 0; i < e.target.files.length; i++) {
        reader[i] = new FileReader();
        reader[i].onload = finisher(i,e);
        reader[i].readAsDataURL(e.target.files[i]);

        // onloadは別関数で準備しないとfor文内では使用できないので、関数を準備。
        function finisher(i,e){
          return function(e){
          $(`#preview_${i}`).attr('src', e.target.result);
          }
        }
      }
   }
});
</script>