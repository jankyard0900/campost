<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-2 col-12 mb-3'>
      <%= render 'category_search', categories: @categories %>
    </div>

    <div class='col-md-10 col-12'>

      <div class="row pl-3">
        <h3><b><%= @category.name %>のキャンプギア一覧</b></h3>
        <b style="padding-top: 10px; margin-bottom: 8px;">（全<%= @gears_count %>件）</b>
      </div>

      <div class="row pl-3">
        <p>
          <%= link_to '新しい順', gear_search_path(category_id: @category.id, latest: "新着順") %>
          | <%= link_to '評価の高い順', gear_search_path(category_id: @category.id, star_count: "評価の高い順") %>
        </p>
      </div>

      <div class = "row">
        <%= render "index", gears: @category_gears %>
      </div>

      <div class="d-flex justify-content-center">
        <%= paginate @category_gears %>
      </div>
    </div>
  </div>
</div>