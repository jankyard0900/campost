<div class="container px-5 my-5 px-sm-0 my-sm-0">
  <div class="row">
    <h4 class="mt-5 text-center", style="background-color: #eee; width:200px; margin-bottom: 40px;"><b>新規会員登録</b></h4>
  </div>

  <div class="row">
    <div class="d-flex align-items-center justify-content-center">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="d-flex align-items-center justify-content-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :ニックネーム %><br>
          <%= f.text_field :name, size: 30, style:"margin-right:10px; margin-bottom: 20px;" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, size: 30, autofocus: true, autocomplete: "email", style:"margin-right:10px; margin-bottom: 20px;" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（６文字以上） %><br />
          <%= f.password_field :password, size: 30, autocomplete: "new-password", style:"margin-right:10px; margin-bottom: 20px;" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation,  size: 30, autocomplete: "new-password", style:"margin-right:10px; margin-bottom: 20px;" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h5 class = "mt-3", style="background-color: #eee; width:220px; text-align: center;">既に登録済みの方</h4>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>